# Environment Configuration
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=rootpassword

# Service-specific Database Names
USER_SERVICE_DB=user_service
CAMPUS_SERVICE_DB=campus_service
PAYROLL_SERVICE_DB=payroll_service

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Service Ports
USER_SERVICE_PORT=3001
CAMPUS_SERVICE_PORT=3002
PAYROLL_SERVICE_PORT=3003

# Security
JWT_SECRET=your-jwt-secret-change-this-in-production-very-long-key-123456789
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=change-this-32-char-key-prod123!

# Service URLs for inter-service communication
USER_SERVICE_URL=http://localhost:3001
CAMPUS_SERVICE_URL=http://localhost:3002
PAYROLL_SERVICE_URL=http://localhost:3003

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# Timezone
TZ=Asia/Taipei

# Logging
LOG_LEVEL=debug

# File Storage (for ID card files)
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=./uploads
AWS_S3_BUCKET=eduhub-files
AWS_S3_REGION=ap-southeast-1

# Rate Limiting
ENABLE_RATE_LIMITING=true
GLOBAL_RATE_LIMIT_WINDOW=3600
GLOBAL_RATE_LIMIT_MAX=1000

# Cache Configuration
DEFAULT_CACHE_TTL=900
USER_CACHE_TTL=1800
CAMPUS_CACHE_TTL=1800
COMPENSATION_CACHE_TTL=3600

# Distributed Lock Configuration
LOCK_DEFAULT_TTL=60
LOCK_RETRY_DELAY=100
LOCK_MAX_RETRIES=10